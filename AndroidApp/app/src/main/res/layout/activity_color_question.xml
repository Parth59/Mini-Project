        </LinearLayout>

        <LinearLayout
            android:layout_height="125sp"
            android:layout_width="100sp"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/yellow"
                android:id="@+id/sixthimage"
                android:layout_weight="1"
